              <img alt="Brand" src="...">
            </a>

            <div class="input-group">
              <input type="text" class="form-control" placeholder="Find friends">
              <span class="input-group-btn">
                <button class="btn btn-default" type="button">Go!</button>
              </span>
            </div>

            <li><%= link_to "user name", "#" %></li>
